<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue1"
    tools:context="com.example.jamiepatel.pusherchat.LoginActivity">

    <TextView
        android:id="@+id/welcome_view"
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="fill_parent"
        android:inputType="text"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/welcome_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/phone_number"
        android:text="@string/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <Button
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Talking!"
        android:id="@+id/button"
        android:onClick="onBottonClick"
        android:layout_below="@+id/mmWhoNo"
        android:layout_marginTop="106dp"
        android:layout_alignRight="@+id/phone_number"
        android:layout_alignEnd="@+id/phone_number" />


    <MultiAutoCompleteTextView

        android:id="@+id/mmWhoNo"

        android:textSize="16sp"

        android:layout_width="fill_parent"

        android:layout_height="50dp"

        android:layout_marginTop="22dp"
        android:layout_below="@+id/username_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Let&apos;s get started."
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />



</RelativeLayout>
